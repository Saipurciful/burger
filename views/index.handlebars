<div class="row">
  <div class="col-md-6">
    

<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
       <div class="available-burgers">
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="update-button">
                    {{this.burger_name}}
                    <button type="submit" class="btn- btn-default" id="burger-ready">DEVOUR IT</button>
                </form>
            </div>
    {{/unless}}
  {{/each}}
</ul>

 </div>
  <div class="col-md-6">
    
  

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
     <div class="devoured-burgers">
                {{this.burger_name}}
            </div>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Cat Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  

  <button type="submit">Add Cat</button>
</form>
</div>
</div>